@model IEnumerable<BugDetective.Models.DataTables.Projects>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if(User.IsInRole("Admin")){
    <a href="/Manage/ManageUsers" class="btn btn-primary">Manage Users</a>
}
else{
    
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if(User.IsInRole("Admin"))
    {
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Project Manager
        </th>
    </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.DisplayName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
    }
    </table>
        }

else if (!User.IsInRole("Admin"))
{ 
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Project Manager
                </th>
            </tr>
            @foreach (var item in Model)
            {
                if(item.ManagerId == User.Identity.GetUserId() || item.Users.Any(u => u.Id == User.Identity.GetUserId())){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.DisplayName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
                </tr>
                }
            }
        </table>
    }
    